{
  "name": "honeypot",
  "version": "1.0.0",
  "description": "A custom dashboard for viewing/labeling content.",
  "main": "dist/app.js",
  "scripts": {
    "test": "mocha",
    "build": "tsc --build",
    "dev": "ts-node src/app.ts --use_local",
    "flow": "flow",
    "start": "npm run build && node dist/app.js",
    "prod": "tsc && node dist/app.js --use_prod",
    "local-watch": "tsc -w & nodemon -q -w dist dist/app.js --use_local",
    "staging-watch": "tsc -w & nodemon -q -w dist dist/app.js --use_staging",
    "prod-watch": "tsc -w & nodemon -q -w dist dist/app.js --use_prod",
    "postinstall": "npx husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clondono/template-repo.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/clondono/template-repo/issues"
  },
  "homepage": "https://github.com/clondono/template-repo#readme",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@types/node": "^14.14.19",
    "bcrypt": "^5.0.0",
    "bluebird": "^3.7.2",
    "bs58": "^4.0.1",
    "husky": "^6.0.0",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-logger": "^3.2.1",
    "koa-qs": "^3.0.0",
    "koa-router": "^10.0.0",
    "koa-send": "^5.0.1",
    "minimist": "^1.2.5",
    "nodemailer": "^6.4.17",
    "nodemailer-mandrill-transport": "^1.2.0",
    "pg-promise": "^10.8.1",
    "swig-email-templates": "^6.0.0",
    "ts-node": "^9.1.1",
    "uuid-base62": "^0.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.33",
    "@types/bs58": "^4.0.1",
    "@types/koa": "^2.11.7",
    "@types/koa__cors": "^3.0.2",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-qs": "^2.0.0",
    "@types/koa-router": "^7.4.1",
    "@types/koa-send": "^4.1.2",
    "@types/lodash": "^4.14.167",
    "@types/minimist": "^1.2.1",
    "@types/nodemailer": "^6.4.0",
    "@types/swig-email-templates": "^5.0.0",
    "eslint": "^7.14.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "nodemon": "^2.0.6",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.ts": [
        "prettier-standard",
        "git add"
      ]
    }
  }
}
